<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center"
    android:background="@drawable/gridselector">
    
    <ImageView 
        android:id="@+id/iv_imageHome"
        android:layout_width="@dimen/margin_size60dp"
        android:layout_height="@dimen/margin_size60dp"
        android:background="@drawable/icon_code"/>
    
    <TextView 
        android:id="@+id/tv_itemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机卫士"
        android:textColor="#000000"
        android:textSize="@dimen/margin_size15dp"/>

</LinearLayout>
