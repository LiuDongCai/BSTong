<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_sizey35dp"
    android:background="#02b300"
    android:orientation="vertical" >

    <RelativeLayout 
         android:id="@+id/rl_left"
         android:layout_width="@dimen/margin_size42dp"
     	 android:background="@drawable/drawable_head_back_bg"
         android:layout_height="fill_parent">
      <ImageButton
           android:id="@+id/head_left_btn"
           android:layout_width="@dimen/margin_size19dp"
           android:layout_height="@dimen/margin_sizey18dp"
           android:layout_centerInParent="true"
           android:scaleType="centerCrop"
           android:clickable="false"
           android:background="@drawable/left_arrow_icon" />
	</RelativeLayout>
	
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="标题"
        android:textColor="#ffffffff"
        android:textSize="@dimen/margin_size17dp"/>
    
    <RelativeLayout 
        android:id="@+id/rl_right"
        android:layout_width="@dimen/margin_size42dp"
     	android:background="@drawable/drawable_head_back_bg"
     	android:layout_alignParentRight="true"
        android:layout_height="fill_parent">
        <ImageButton
           	android:id="@+id/head_right_btn2"
          	android:layout_width="@dimen/margin_size22dp"
         	android:layout_height="@dimen/margin_sizey21dp"
	        android:layout_centerInParent="true"
	        android:scaleType="centerCrop"
	        android:clickable="false"
            android:background="@drawable/share_icon"/>
       </RelativeLayout>

    
</RelativeLayout>